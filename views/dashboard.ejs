                    <div class="aluno col-10 p-2">Aderbalino Ramos Silveira</div>
                </div>
                <div>
                    <i class="far fa-eye view icons"></i>
                    <i class="fas fa-edit edit icons"></i>
                    <i class="far fa-trash-alt delete icons"></i>
                </div>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div class="d-flex flex-row col-10">
                    <div class="protocol col-2 p-2">12</div>
                    <div class="matricula col-3 p-2">2021-20102</div>
                    <div class="aluno col-10 p-2">Larinalva de Matos</div>
                </div>
                <div>
                    <i class="far fa-eye view icons"></i>
                    <i class="fas fa-edit edit icons"></i>
                    <i class="far fa-trash-alt delete icons"></i>
                </div>
            </li>
        </ul>
    </div>
</body>
